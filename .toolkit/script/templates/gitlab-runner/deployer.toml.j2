#-------------------------------------------------------------------------
#  {{config.runner}} at {{config.name}} of {{bundle.workbench}}
#-------------------------------------------------------------------------
[[runners]]
  name = "{{config.name}}/{{bundle.workbench}}/{{config.runner}}"
  url = "{{url}}"
  token = "{{token}}"
  executor = "docker"
  environment = ["EPM_WORKBENCH={{bundle.workbench}}"]
  [runners.custom_build_dir]
  [runners.cache]
    [runners.cache.s3]
    [runners.cache.gcs]
  [runners.docker]
    tls_verify = false
    image = "epmkit/gcc8"
    privileged = false
    disable_entrypoint_overwrite = false
    oom_kill_disable = false
    disable_cache = false
    pull_policy = "if-not-present"
    volumes = ["/cache", "{{config.HOME}}/.epm/.workbench/{{bundle.workbench}}/deployer:/home/conan/.epm/.workbench/{{bundle.workbench}}"]
    shm_size = 0


