[[runners]]
  name = "Linux deployer {{hostname}}/{{workbench}}"
  url = "{{url}}"
  token = "{{token}}"
  executor = "docker"

  pre_build_script = """set -e
  sudo chown -R $(id -u):$(id -g) /workbench
  mkdir -p $HOME/.epm/.workbench
  WD=$HOME/.epm/.workbench/{{workbench}}
  ln -s /workbench $WD  
  """

  environment = ["LC_ALL=en_US.UTF-8", "EPM_WORKBENCH={{workbench}}", "CONAN_REVISIONS_ENABLED=1"]
  [runners.docker]
    tls_verify = false
    image = "edgetoolkit/gcc8"
    privileged = false
    disable_cache = false
    volumes = ["/cache", "{{HOME}}/.gitlab-runner/workbench/{{workbench}}/deployer:/workbench"]
    pull_policy = "if-not-present"
    shm_size = 0
  [runners.cache]


