[[runners]]
  name = "{{runner.description}}"
  url = "{{ url }}"
  token = "{{ token }}"
  executor = "docker"
  limit = {{ limit | default(1) }}
  environment = ["LC_ALL=en_US.UTF-8"]

  pre_build_script = """set -e
  python -m pip config set global.index-url http://172.16.0.121:8040/repository/pypi/simple
  python -m pip config set install.trusted-host 172.16.0.121
  python -m pip install --upgrade pip
  """

  [runners.docker]
    image = "edgetoolkit/gcc5"
    tls_verify = false
    privileged = true
    disable_cache = false
    pull_policy = "if-not-present"
  [runners.cache]
    [runners.cache.s3]
    [runners.cache.gcs]


