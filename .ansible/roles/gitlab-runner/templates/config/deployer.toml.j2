{% if platform == 'Linux' %}
[[runners]]
  name = "{{description}}"
  url = "{{ url }}"
  token = "{{ token }}"
  executor = "shell"
  pre_build_script = """set -e
  WD=$HOME/.epm/.workbench/{{workbench}}
  source $WD/venv/bin/activate
  python $WD/script/pre_build.py
  """
  environment = ["LC_ALL=en_US.UTF-8", "EPM_WORKBENCH={{workbench}}"]
  [runners.custom_build_dir]
  [runners.cache]
    [runners.cache.s3]
    [runners.cache.gcs]
    [runners.cache.azure]
  [runners.docker]
    image = "edgetoolkit/gcc5"
    tls_verify = false
    privileged = true
    disable_cache = false
    pull_policy = "if-not-present"
    volumes = ["/home/edgetoolkit/.epm:/home/conan/.epm"]

{% endif %}    
